# Environment variables for DDoS Detector
# Copy this file to .env and fill in your values

# ClickHouse Configuration (Akvorado Database)
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=9000
CLICKHOUSE_DATABASE=flows
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Detection Settings
CHECK_INTERVAL=60
TIME_WINDOW=300
PPS_THRESHOLD=100000
BPS_THRESHOLD=1000000000
UNIQUE_SOURCES_THRESHOLD=1000
FPS_THRESHOLD=10000

# Notification Webhooks
DISCORD_WEBHOOK=
SLACK_WEBHOOK=
NOTIFICATION_COOLDOWN=300

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ddos_detector.log
